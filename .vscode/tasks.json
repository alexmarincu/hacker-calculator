{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "panel": "new"
    },
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": [],
    "tasks": [
        {
            "label": "App: Run",
            "command": "${command:python.interpreterPath} src/main.py",
            "group": "build"
        },
        {
            "label": "App: Build",
            "linux": {
                "command": [
                    ". .pyvenv/bin/activate && flet pack src/main.py",
                    " --name HckrCalc",
                    " --icon assets/icon.png",
                    " --add-data \"assets:assets\""
                ],
            },
            "windows": {
                "command": [
                    ". .pyvenv/bin/activate && flet pack src/main.py", // todo update for windows
                    " --name HckrCalc",
                    " --icon assets/icon.png",
                    " --add-data \"assets:assets\""
                ],
            },
            "group": "build"
        },
        {
            "label": "Python venv: Setup",
            "command": "${command:python.interpreterPath} -m venv .pyvenv"
        },
        {
            "label": "Python venv: Activate",
            "linux": {
                "command": ". .pyvenv/bin/activate"
            },
            "windows": {
                "command": ". .pyvenv/bin/activate" // todo update for windows
            }
        },
        {
            "label": "Python venv: Install requirements",
            "command": [
                "${command:python.interpreterPath}",
                " -m pip install -r requirements.txt"
            ]
        }
    ]
}