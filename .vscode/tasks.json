{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "App: Run",
            "type": "shell",
            "command": "${command:python.interpreterPath} src/main.py",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "App: Build",
            "type": "shell",
            "command": [
                ". .pyvenv/bin/activate && flet pack src/main.py",
                " --name HckrCalc --icon assets/icon.png"
            ],
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Python venv: Setup",
            "type": "shell",
            "command": "python -m venv .pyvenv",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Python venv: Activate",
            "type": "shell",
            "command": ". .pyvenv/bin/activate",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Python venv: Install requirements",
            "type": "shell",
            "command": [
                "${command:python.interpreterPath}",
                " -m pip install -r requirements.txt"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        }
    ]
}